<style>
#error_explanation {
  color: #d32f2f;
  background-color: #ffcdd2;
  border: 2px solid;
  border-radius: 10px;

  ul {
    color: #d32f2f;
    margin: 0 0 30px 0;
  }
}

.alert {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10px;
}
</style>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
